<com.thanksmister.iot.voicepanel.ui.views.AlarmCodeView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/alarmCodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="horizontal">

    <include layout="@layout/view_keypad"
             android:layout_width="310dp"
             android:layout_height="400dp"/>
    
    <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="match_parent"/>
    
    <RelativeLayout
            android:layout_width="310dp"
            android:paddingTop="16dp"
            android:layout_height="400dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/codeTitle"
                style="@style/WizardPageTitle"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Please enter the new alarm code."/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="12dp"
                android:gravity="center">

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode1"
                    android:contentDescription="TODO" android:src="@drawable/ic_radio_button_unchecked_black"/>

            <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode2"
                    android:contentDescription="TODO" android:src="@drawable/ic_radio_button_unchecked_black"/>

            <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode3"
                    android:contentDescription="TODO" android:src="@drawable/ic_radio_button_unchecked_black"/>

            <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode4"
                    android:contentDescription="TODO" android:src="@drawable/ic_radio_button_unchecked_black"/>

        </LinearLayout>

    </RelativeLayout>
    
</com.thanksmister.iot.voicepanel.ui.views.AlarmCodeView>